<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../layout/head %>
  <title>Book App</title>
</head>

<body>

  <header>
    <%- include ../layout/header %>
  </header>

  <main>

    <h2>Collection</h2>
    <ol>
        <% collection.forEach(book =>{ %>
        <li>
            <img src=<%= book.image_url %> alt="">
            <h2> <%= book.title %> </h2>
            <h3>By: <%= book.author %> </h3>
            <p><%= book.isbn %></p>
            <p><%= book.bookshelf %></p>
            <p><%= book.description %></p>
        </li>
        <% }) %>
    </ol>


  </main>

</body>

</html>